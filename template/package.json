{
  "name": "{{ name }}",
  "description": "{{ description }}",
  "version": "0.0.0",
  "author": "{{ author }}",
  "main": "dist/{{ name }}.common.js",
  "unpkg": "dist/{{ name }}.js",
  "scripts": {
    "dev": "rollup -cw",
    "build": "rollup -c --environment BUILD && uglifyjs dist/{{ name }}.js > dist/{{ name }}.min.js",
    "test": "npm run lint && ava",
    "lint": "eslint --ext .js src test/unit/specs"
  },
  "license": "MIT",
  "pre-commit": [
    "lint"
  ],
  "keywords": [
    "yuki"
  ],
  "dependencies": {
  },
  "devDependencies": {
    "ava": "^0.18.1",
    "eslint": "^3.13.1",
    "eslint-config-standard": "^6.2.1",
    "eslint-plugin-promise": "^3.4.0",
    "eslint-plugin-standard": "^2.0.1",
    "pre-commit": "^1.1.3",
    "rollup": "^0.41.4",
    "rollup-plugin-buble": "^0.15.0",
    "rollup-plugin-commonjs": "^7.0.0",
    "rollup-plugin-node-resolve": "^2.0.0",
    "rollup-watch": "^3.2.2",
    "uglify-js": "^2.7.5"
  },
  "standard": {
    "globals": []
  },
  "repository": {
    "type": "git",
    "url": "git+{{ url }}.git"
  },
  "bugs": {
    "url": "{{ url }}/issues"
  },
  "homepage": "{{ url }}#readme"
}
